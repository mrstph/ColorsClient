<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ColorsClient.ViewModels"
             x:Class="ColorsClient.Login">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" />
        <Button Text="Pas encore de compte ? Se register" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>
