<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ColorsClient.ViewModels"
             x:Class="ColorsClient.Register">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Register" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirmer mot de passe" IsPassword="True" />

        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Button Text="Déjà inscrit ? Se connecter" Clicked="OnLoginClicked" />
        
    </VerticalStackLayout>
</ContentPage>
